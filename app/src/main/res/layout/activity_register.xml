<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.nucome.app.forex.RegisterActivity">

    <TextView
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:text="Email:"
        android:id="@+id/emailLabel"

        android:layout_marginTop="16dp" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:hint="@string/email"
        android:ems="10"
        android:maxLength="40"
        android:maxLines="1"
        android:id="@+id/emailEditText"
        android:layout_toRightOf="@+id/emailLabel"
        android:layout_alignBaseline="@+id/emailLabel" />

    <TextView
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:text="Password:"
        android:id="@+id/passwordTextView"
        android:layout_below="@+id/emailLabel"
        android:layout_alignLeft="@+id/emailLabel"
        android:layout_marginTop="16dp" />

    <EditText
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:maxLength="15"
        android:maxLines="1"
        android:inputType="textPassword"
        android:ems="10"
        android:hint="@string/password"
        android:id="@+id/passwordEditText"
        android:layout_alignTop="@+id/passwordTextView"
        android:layout_toRightOf="@+id/passwordTextView"
        android:layout_alignBaseline="@+id/passwordTextView" />

    <TextView
        android:layout_width="250dp"
        android:layout_height="20dp"
        android:text=""
        android:textColor="#FF4081"
        android:id="@+id/messageTextView"
        android:layout_below="@+id/passwordTextView"
        android:layout_alignLeft="@+id/passwordTextView"
        android:layout_marginTop="16dp" />

     <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="注册/登录"
        android:id="@+id/submitRegister"
        android:layout_below="@+id/messageTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp" />
</RelativeLayout>

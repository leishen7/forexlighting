<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:id="@+id/currency"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="8dp"
        android:textSize="14dp"/>
    <TextView android:layout_height="wrap_content"
        android:layout_width="65dp"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="8dp"
        android:textSize="14dp"
        android:id="@+id/rate" android:paddingLeft="2dp"
        android:layout_below="@+id/currency"
        android:layout_alignRight="@+id/currency"/>
    <TextView android:layout_height="wrap_content"
        android:layout_width="65dp"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="8dp"
        android:textSize="14dp"
        android:id="@+id/dailychange" android:paddingLeft="2dp"
        android:layout_below="@+id/rate"
        android:layout_alignRight="@+id/currency"/>
    <TextView android:layout_height="wrap_content"
        android:layout_width="65dp"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="8dp"
        android:text="发表评论"
        android:textSize="14dp"
        android:id="@+id/rate_comment" android:paddingLeft="2dp"
        android:layout_alignRight="@+id/currency"
        android:layout_below="@+id/dailychange"/>
    <TextView android:layout_height="wrap_content"
        android:layout_width="65dp"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="8dp"
        android:text="(点击）"
        android:textSize="14dp"
        android:id="@+id/rate_recommend" android:paddingLeft="2dp"
        android:layout_alignRight="@+id/currency"
         android:layout_below="@+id/rate_comment"/>

    <ImageView
        android:id="@+id/rateChart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/currency"/>

</RelativeLayout>
